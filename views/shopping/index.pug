extends /layouts/standardNavbar.pug
block variables
	- var title = 'Shopping List'
block append content

	/////////////////////////////////////////////////////////////////////////////

	-if(messages.success)
		.alert.alert-success(role='alert')
			strong #{messages.success}
	-else if(messages.error)
		.alert.alert-danger(role='alert')
			strong #{messages.error}
		
	/////////////////////////////////////////////////////////////////////////////
	span.badge.badge-primary Tave 
	span.badge.badge-success Bru
	span.badge.badge-danger Zini
	br
	br

	each item in shopping_lists[shopping_lists.length-1].items
		ul.list-group
			li.list-group-item.list-group-item-success #{item.name}
	br
	form(action="shopping/api/addItem", method="post") 
		.input-group.mb-3
			input.form-control(type='text' name='item_name' placeholder="Add any item" aria-label="Recipient's username" aria-describedby='basic-addon2')
